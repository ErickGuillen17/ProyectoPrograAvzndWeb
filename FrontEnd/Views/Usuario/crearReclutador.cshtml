@model BackEnd.Entities.usuarioReclutador

@{
    Layout = "";
    ViewData["Title"] = "crearReclutador";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>WorkNet </title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../../vendors/feather/feather.css">
  <link rel="stylesheet" href="../../vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="../../vendors/typicons/typicons.css">
  <link rel="stylesheet" href="../../vendors/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="../../css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
   <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="../../images/logo.svg" alt="logo">
              </div>
            <form asp-action="crearReclutador">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row form-group" >
                    <div class="col-6">
                        <label asp-for="NombreReclutador" class="control-label"></label>
                        <input type="text" asp-for="NombreReclutador" class="form-control form-control-lg" placeholder="Nombre">
                    </div>
                    <div class="col-6">
                        <label asp-for="ApellidoReclutador" class="control-label"></label>
                        <input type="text" asp-for="ApellidoReclutador" class="form-control form-control-lg" placeholder="Apellido">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CorreoReclutador" class="control-label"></label>
                    <input type="email" asp-for="CorreoReclutador" class="form-control form-control-lg" placeholder="Email">
                </div>
                <div class="row form-group" >
                    <div class="col-6">
                        <label asp-for="contrasena" class="control-label"></label>
                        <input type="password" asp-for="contrasena" class="form-control form-control-lg" placeholder="Contraseña">
                    </div>
                    <div class="col-6">
                        <label asp-for="confirmacion" class="control-label"></label>
                        <input type="password" asp-for="confirmacion" class="form-control form-control-lg" placeholder="Confirmación">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Compania" class="control-label"></label>
                    <input type="text" asp-for="Compania" class="form-control form-control-lg" placeholder="Compañía">
                </div>
                <div class="form-group">
                    <label asp-for="TelefonoReclutador" class="control-label"></label>
                    <input type="number" asp-for="TelefonoReclutador" class="form-control form-control-lg" placeholder="Teléfono">
                </div>         
                <div class="form-group">
                    <input type="submit" formmethod="post" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Crear cuenta"/>
                </div>
            </form>
            </div>      
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    </div>
    <!-- page-body-wrapper ends -->
  </div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="../../vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="../../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="../../js/off-canvas.js"></script>
<script src="../../js/hoverable-collapse.js"></script>
<script src="../../js/template.js"></script>
<script src="../../js/settings.js"></script>
<script src="../../js/todolist.js"></script>
<!-- endinject -->
</body>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
