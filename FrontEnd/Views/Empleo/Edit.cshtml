@model FrontEnd.Models.EmpleoViewModel

<div class="col-6 grid-margin stretch-card" style="margin-left: auto;margin-right: auto;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información del empleo</h4>
            <form class="forms-sample" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @Html.HiddenFor(Model=>Model.IdEmpleo)
                
                <div class="form-group">
                    <label asp-for="EmpleoNombre" class="control-label"></label>
                    <input asp-for="EmpleoNombre" type="text" class="form-control"/>
                    <span asp-validation-for="EmpleoNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" type="text" class="form-control" style="height: 100px;"> </textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Requisitos" class="control-label"></label>
                    <textarea asp-for="Requisitos" type="text" class="form-control" style="height: 100px;"> </textarea>
                    <span asp-validation-for="Requisitos" class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <label asp-for="CorreoReclutador" class="control-label"></label>
                    <input asp-for="CorreoReclutador" class="form-control" readonly/>
                    <span asp-validation-for="CorreoReclutador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Compania" class="control-label"></label>
                    <input asp-for="Compania" class="form-control" readonly/>
                    <span asp-validation-for="Compania" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpMinima" class="control-label"></label>
                    <input asp-for="ExpMinima" class="form-control"/>
                    <span asp-validation-for="ExpMinima" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GradoEstudio" class="control-label"></label>
                    <select class = "js-example-basic-single w-100" asp-for="GradoEstudio" class="form-control" asp-items="new SelectList(ViewBag.Grado)"></select>
                    <span asp-validation-for="GradoEstudio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriaDescripcion" class="control-label"></label>
                     @Html.DropDownListFor(model => model.IdCategoria, new SelectList(Model.Categorias,"IdCategoria","CategoriaDescripcion","--Select--"), new { @class = "js-example-basic-single w-100"})
                    <span asp-validation-for="CategoriaDescripcion" class="text-danger"></span>
                </div>                
                <div class="form-group">
                    <label asp-for="EstadoPuesto" class="control-label"></label>
                    <select class = "js-example-basic-single w-100" asp-for="EstadoPuesto" class="form-control" asp-items="new SelectList(ViewBag.Estado)"></select>
                    <span asp-validation-for="EstadoPuesto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>